{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block main %}
    {% include './layout/search_border.html.twig' with {
        'form': form,
        'entity': 'Clients',
        'values': customers,
        'path': path('app_user_customer_add'),
        'class': 'fancy-add bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded float-right',
        'label': 'Ajouter un client',
        'right': 'ROLE_USER'
    } %}
    <div class="container mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-4">
            {% for customer in customers %}
                <div class="w-full p-2">
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                        <div class="p-4">
                            <div class="p-4">
                                <h2 class="text-gray-800 text-lg font-semibold">{{ customer.firstName }} {{ customer.lastName }}</h2>
                                <p class="mt-2 text-gray-600">{{ customer.invoices|length }} factures</p>
                                <div class="mt-2 text-gray-600">
                                    <h3 class="text-gray-800 text-lg font-semibold">Adresse de livraison</h3>
                                    {% if customer.deliveryAddress %}
                                        {% include './components/a.html.twig' with {
                                            'path': path('app_user_address_deliveryAddress_edit', {'address_id': customer.deliveryAddress.id, 'customer_id': customer.id}),
                                            'fa': 'edit'
                                        } %}
                                        <p>{{ customer.deliveryAddress.street }}</p>
                                        <p>{{ customer.deliveryAddress.postalCode }} {{ customer.deliveryAddress.city }}</p>
                                        <p>{{ customer.deliveryAddress.country }}</p>
                                    {% else %}
                                        <p>Pas d'adresse de livraison</p>
                                        {% include './components/a.html.twig' with {
                                            'path': path('app_user_address_add', {'id': customer.id}),
                                            'fa': 'add'
                                        } %}
                                    {% endif %}
                                </div>
                                <div class="mt-2 text-gray-600">
                                    <h3 class="text-gray-800 text-lg font-semibold">Adresse de facturation</h3>
                                    {% if customer.billingAddress %}
                                        {% include './components/a.html.twig' with {
                                            'path': path('app_user_address_billingAddress_edit', {'address_id': customer.billingAddress.id, 'customer_id': customer.id}),
                                            'fa': 'edit'
                                        } %}
                                        <p>{{ customer.billingAddress.street }}</p>
                                        <p>{{ customer.billingAddress.postalCode }} {{ customer.billingAddress.city }}</p>
                                        <p>{{ customer.billingAddress.country }}</p>
                                    {% else %}
                                        <p>Pas d'adresse de facturation</p>
                                        {% include './components/a.html.twig' with {
                                            'path': path('app_user_address_add', {'id': customer.id}),
                                            'fa': 'add'
                                        } %}
                                    {% endif %}
                                </div>
                            </div>
                            {% include './components/a.html.twig' with {
                                'path': path('app_user_customer_edit', {'id': customer.id}),
                                'class': 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded',
                                'label': 'Modifier',
                                'svg_path': 'M15 5a1 1 0 0 1 1 1v11a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a1 1 0 0 1 1-1h1V4a3 3 0 0 1 3-3h2a3 3 0 0 1 3 3v1h1zm-4 1h-2V4a1 1 0 0 0-1-1H8a1 1 0 0 0-1 1v2H5a1 1 0 0 0 0 2h1v9a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V8h1a1 1 0 0 0 0-2h-1V6a1 1 0 0 0-1-1z'
                            } %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% if customers is not empty %}
            <div class="box-footer">
                <div class="navigation">
                    {{ knp_pagination_render(customers) }}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
