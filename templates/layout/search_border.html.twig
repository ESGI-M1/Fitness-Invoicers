<div class="search border-b shadow-lg p-4">
    {% if form %}
        {{ form_start(form) }}
        {{ form_end(form) }}
    {% endif %}
</div>
<div class="border-b shadow-lg p-4 grid grid-cols-2">
    <div>
        <h3 class="text-lg font-bold dark:text-white">{{ entity }}
            ({{ values|length is iterable ? values|length : values.totalItemCount }})</h3>
    </div>
    {% if path is defined %}
        <div class="text-right">
            {% if is_granted(right) %}

            {% include './components/a.html.twig' with {
                'path': path,
                'class': 'fancy-add bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded float-right',
                'label': label,
                'fa': 'add'
            } %}
{#            {% if is_granted('company_referent')%}#}

            {% endif %}
        </div>
    {% endif %}
</div>