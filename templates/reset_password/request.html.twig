{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen h-screen flex items-center justify-center bg-gray-100">
        <div class="max-w-md w-full bg-white p-8 rounded shadow-lg">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <strong class="font-bold">Erreur!</strong>
                    <span class="block sm:inline">{{ flash_error }}</span>
                    <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                        <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M6.586 6.586a2 2 0 112.828-2.828L10 7.172l1.586-1.586a2 2 0 112.828 2.828L12.828 10l1.586 1.586a2 2 0 11-2.828 2.828L10 12.828l-1.586 1.586a2 2 0 11-2.828-2.828L7.172 10 5.586 8.414a2 2 0 010-2.828z"/></svg>
                    </span>
                </div>
            {% endfor %}

            <h2 class="text-2xl mb-4 text-center font-semibold">Réinitialiser votre mot de passe</h2>

            {{ form_start(requestForm, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_row(requestForm.email, {'attr': {'class': 'w-full px-3 py-2 text-sm border rounded-md focus:outline-none focus:border-indigo-600'}}) }}
            <small class="block">Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small>
            <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:bg-indigo-700 transition duration-200">Envoyer l'email de réinitialisation du mot de passe</button>
            {{ form_end(requestForm) }}
            <div class="text-right">
                {% include './components/back.html.twig' with {
                    'content': 'Retour',
                    'fa': 'arrow-left'
                } %}
            </div>
        </div>
    </div>
{% endblock %}
