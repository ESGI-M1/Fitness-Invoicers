{% extends 'base.html.twig' %}

{% block title %}Entreprise : {{ company.name }}{% endblock %}

{% block main %}

    {% include './components/a.html.twig' with {
        'path': path('app_user_company_edit', { 'id': company.id }),
        'label': 'Modifier les informations de l\'entreprise',
        'class': 'flex items-center justify-center px-4 py-2 text-white rounded bg-primary hover:bg-primary-hover',
        'fa': 'edit'
    } %}

    {% if company.address %}
        {% include './components/a.html.twig' with {
            'path': path('app_user_address_company_edit', { 'company_id': company.id , 'address_id': company.address.id }),
            'label': 'Modifier l\'adresse de l\'entreprise',
            'class': 'flex items-center justify-center px-4 py-2 bg-primary hover:bg-primary-hover text-white rounded mt-4',
            'fa': 'edit'
        } %}
    {% else %}
        {% include './components/a.html.twig' with {
            'path': path('app_user_address_add_company', { 'id': company.id}),
            'label': 'Ajouter une adresse Ã  l\'entreprise',
            'class': 'flex items-center justify-center px-4 py-2 bg-primary hover:bg-primary-hover text-white rounded mt-4',
            'fa': 'plus-circle'
        } %}
    {% endif %}

{% endblock %}
