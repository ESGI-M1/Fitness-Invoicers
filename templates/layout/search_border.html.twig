<div class="search border-b p-4">
    {% if form %}
        {{ form_start(form) }}
        {{ form_end(form) }}
    {% endif %}
</div>
<div class="border-b shadow-lg p-4 grid grid-cols-2">
    <div>
        <h3 class="text-lg font-bold dark:text-white">{{ entity }}
            ({{ values|length is iterable ? values|length : values.totalItemCount }})</h3>
    </div>
    {% if path is defined %}
        <div class="text-right">
            {% if is_granted(right) %}
            {% include './components/a.html.twig' with {
                'path': path,
                'class': 'bg-primary hover:bg-primary-hover float-right',
                'label': label,
                'fa': 'add'
            } %}
            {% endif %}
        </div>
    {% endif %}
</div>