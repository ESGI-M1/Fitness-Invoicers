{# components/input.html.twig #}
{% block input_row %}
    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="{{ name }}">
            {{ label }}
        </label>
        <input
                type="{{ type }}"
                id="{{ name }}"
                name="{{ name }}"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-200 opacity-80"
                placeholder="{{ placeholder }}"
        >
    </div>
{% endblock %}
