{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block main %}
    <div class="border-b shadow-lg p-4 grid grid-cols-2">
        <div>
            <h3 class="text-lg font-bold">Catégories</h3>
        </div>
        <div class="text-right">
            <button data-type="ajax" data-src="{{ path('app_user_category_add') }}" class="fancy-add bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded float-right">Ajouter une catégorie</button>
        </div>
    </div>
    <div class="mt-4">
        <table class="table table-bordered table-striped table-hover w-full">
            <colgroup>
                <col class="w-8" />
                <col />
                <col />
                <col />
                <col class="w-8" />
            </colgroup>
            <thead>
            <tr>
                <th class="border text-center">
                </th>
                <th class="border">Nom</th>
                <th class="border">Slug</th>
                <th class="border">Entreprise</th>
                <th class="border"></th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td class="text-center border">
                        <a data-type="ajax" class="fancy-add" data-src="{{ path('app_user_category_edit', {'id' : category.id }) }}">
                            <svg class="feather feather-edit h-4 w-4 mx-auto align-middle" viewBox="0 0 24 24" fill="none" stroke="blue" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M19 1L23 5L5 23H1V19L19 1Z"></path>
                            </svg>
                        </a>
                    </td>
                    <td class="border">{{ category.name }}</td>
                    <td class="border">{{ category.slug }}</td>
                    <td class="border">{{ category.company.name }}</td>
                    <td class="text-center border">
                        <a data-type="ajax" class="fancy" data-src="{{ path('app_user_category_delete', {'id' : category.id }) }}">
                            <i class="fa fa-trash text-blue-500 text-sm"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center border">Aucune catégorie définie</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
